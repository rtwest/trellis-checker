{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2020"],
    "module": "commonjs",
    "outFile": "code.js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noImplicitAny": false
  },
  "include": ["code.ts"],
  "exclude": ["node_modules"]
}
